		<input name="lastname" class="form-control" type="text" placeholder="Last Name">
		<input name="age" class="form-control" type="numbers" placeholder="age">
		<input type="button" name="previous" class="previous action-button" value="Previous" />
		<input type="button" name="next" class="next action-button" value="Next" />
	</fieldset>
	<fieldset id="three">
		<h2 class="fs-title">Matching Details</h2>
		<h3 class="fs-subtitle">Help Us, Help You</h3>
        <label>I am a: </label>
            <select name="is_male" class="form-control" id="sel1">
                <option>Guy</option>
                <option>Girl</option>
            </select>
        <label>Seeking a: </label>
            <select name="seeking_male" class="form-control" id="sel1">
                <option>Guy</option>
                <option>Girl</option>
            </select>
		<input type="button" name="previous" class="previous action-button" value="Previous" />
		<input type="submit" name="submit" class="submit action-button" value="Submit" />
	</fieldset>
