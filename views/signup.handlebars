<form id="signup" class="form-signin" name="signup" method="post" action="/signup">
	<!-- progressbar -->
	<ul id="progressbar">
		<li class="active">Basic Details</li>
		<li>Profile Details</li>
        <li>Matching Details</li>
	</ul>
	<!-- fieldsets -->
	<fieldset id="one">
		<h2 class="fs-title">Create your Seemē account</h2>
